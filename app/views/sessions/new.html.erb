<h2>Log In</h2>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <p>
  	<div class="actions"><%= submit_tag "Log In",
      class: "btn btn-xs btn-primary" %>
    </div>
  </p>
<% end %>
